<mvc:View
    controllerName="logaligroup.employees.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="P1" showHeader="false">
                    <content>
                        <f:FlexibleColumnLayout id="fcl" backgroundDesign="Solid" layout="{jsonLayouts>/ActiveKey}" >
                            <f:beginColumnPages>
                                <mvc:XMLView id="masterEmployeeView" viewName="logaligroup.employees.view.MasterEmployee"></mvc:XMLView>
                            </f:beginColumnPages>
                            <f:midColumnPages>
                                <mvc:XMLView id="employeeDetailsView" viewName="logaligroup.employees.view.EmployeeDetails"></mvc:XMLView>
                            </f:midColumnPages>
                            <f:endColumnPages>
                                <Page id="P2">                                    
                                </Page>
                            </f:endColumnPages>
                        </f:FlexibleColumnLayout>
                    </content>
                    <footer>
                        <Toolbar id="Tb1">
                            <Label id="L1" text="{i18n>layout}" class="sapUiSmallMargin"/>
                            <Select id="S1" items="{jsonLayouts>/Layout}" selectedKey="{jsonLayouts>/ActiveKey}">
                                <core:Item id="CI" key="{jsonLayouts>Key}" text="{jsonLayouts>Text}"/>
                            </Select>
                        </Toolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>        