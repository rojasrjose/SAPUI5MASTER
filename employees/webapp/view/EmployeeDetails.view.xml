<mvc:View
    controllerName="logaligroup.employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="P1"  title="{i18n>employeeDetails}">        
        <Panel id="Pn1">
            <FlexBox id="FXB1" height="65px" alignItems="Center" justifyContent="Center">
                <items>
                    <Text id="T1" text="{odataNorthwind>TitleOfCourtesy} {odataNorthwind>LastName} {odataNorthwind>FirstName}" class="boldText"/>
                </items>
            </FlexBox>        
            <FlexBox id="FXB2" height="65px" alignItems="Start" justifyContent="SpaceBetween">
                <items>
                    <VBox id="VB1">
                        <Text id="T2" text="{i18n>employeeID}" class="boldText sapUiTinyMargingEnd"/> 
                        <Text id="T3" text ="{odataNorthwind>EmployeeID}"/>
                    </VBox>        
                    <VBox id="VB2">
                        <Text id="T4" text="{i18n>titleEmployee}" class="boldText sapUiTinyMargingEnd"/> 
                        <Text id="T5" text ="{odataNorthwind>Title}"/>
                    </VBox>             
                </items>
            </FlexBox>  
            <FlexBox id="FXB3" alignItems="Start">
                <items>
                    <HBox id="HB1">
                        <Text id="T6" text="{i18n>contryCode}" class="boldText sapUiTinyMarginBeginEnd"/> 
                        <Text id="T7" text ="{odataNorthwind>Country}"/>
                        <layoutData>
                            <FlexItemData id="FI1" growFactor="2"/>                             
                        </layoutData>
                    </HBox>        
                    <HBox id="HB2">
                        <Text id="T8" text="{i18n>city}" class="boldText sapUiTinyMarginBeginEnd"/> 
                        <Text id="T9" text ="{odataNorthwind>City}" />
                        <layoutData>
                            <FlexItemData id="FI2" growFactor="2"/>                             
                        </layoutData>
                    </HBox>     
                    <FlexBox id="FB4">
                        <Text id="T10" text="{i18n>postalCode}" class="boldText sapUiTinyMarginBeginEnd"/> 
                        <Text id="T11" text ="{odataNorthwind>PostalCode}"/>
                        <layoutData>
                            <FlexItemData id="FI3" growFactor="1"/>                             
                        </layoutData>
                    </FlexBox>         
                </items>
            </FlexBox>  
        </Panel>

        <Panel id="Pn2" class="sapUiSizeCompact" backgroundDesign="Transparent">
            <headerToolbar>
                <Toolbar id="Tbr1">
                    <Title id="Tl1" text="{i18n>incidence} {= ${odataNorthwind>Country} !== 'USA' ? ${i18n>europe} : ${i18n>us}}"/>
                    <ToolbarSpacer id="TS1"/>
                    <Button id="Bt1" text="{i18n>createIncidence}" press="onCreateIncidence"></Button>
                </Toolbar>
            </headerToolbar>
            <Panel id="tableIncidence" class="sapUiNoContentPadding" backgroundDesign="Transparent"></Panel>
        </Panel>
        <Panel class="sapUiSizeCompact" backgroundDesign="Transparent" headerText="{i18n>orders}">
            <core:Fragment fragmentName="logaligroup.employees.fragment.TableOrders" type="XML"/>                    
        </Panel>
    </Page>
</mvc:View>    